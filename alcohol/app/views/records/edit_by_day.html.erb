<ul class="calender__caption caption">
  <li><h3>飲酒記録の編集</h3></li>
</ul>
<div class="bootstrap calender__form">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="form-edit">
        <%= form_with(model: @record, url: update_record_records_path, method: :patch) do |f| %>
          <%= render 'shared/error_messages_record' %>

          <div class="form-group">
          <%= f.label :drink_day, "飲み会実施日" %>
          <h4><%= params[:drink_day] %></h4>
          <%= f.hidden_field :drink_day, value: params[:drink_day] %>
          </div>

          <div class="form-group form-duration-field">
            <%= label_tag :duration_time, "飲み会の時間" %>
            <div>
              <%= f.number_field :hours, min: 0, class: "form-control form-duration-input"%>
              時間
              <%= f.number_field :minutes, min: 0, max: 50, step: 10, class: "form-control form-duration-input"%>
              分
            </div>
          </div>

          <div class="form-group">
            <%= f.label :beer, "ビールの飲酒量(cc)" %>
            <span aria-label="中ジョッキ1杯あたり約350ccです。" data-microtip-position="top" role="tooltip"><%= image_tag 'info.png', class: 'info-button' %></span>
            <%= f.text_field :beer, min: 0, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :highball, "ハイボールの飲酒量(cc)" %>
            <span aria-label="中ジョッキ1杯あたり約350ccです。" data-microtip-position="top" role="tooltip"><%= image_tag 'info.png', class: 'info-button' %></span>
            <%= f.text_field :highball, min: 0, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :chuhi, "チューハイの飲酒量(cc)" %>
            <span aria-label="中ジョッキ1杯あたり約350ccです。" data-microtip-position="top" role="tooltip"><%= image_tag 'info.png', class: 'info-button' %></span>
            <%= f.text_field :chuhi, min: 0, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :sake, "日本酒の飲酒量(cc)" %>
            <span aria-label="おちょこ1杯あたり約45ccです。" data-microtip-position="top" role="tooltip"><%= image_tag 'info.png', class: 'info-button' %></span>
            <%= f.text_field :sake, min: 0, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :wine, "ワインの飲酒量(cc)" %>
            <span aria-label="グラスワイン1杯あたり約120ccです。" data-microtip-position="top" role="tooltip"><%= image_tag 'info.png', class: 'info-button' %></span>
            <%= f.text_field :wine, min: 0, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :whiskey, "ウイスキーの飲酒量(cc)" %>
            <span aria-label="ストレート/ロック1杯あたり約30ccのウイスキーが含まれます。" data-microtip-position="top" role="tooltip"><%= image_tag 'info.png', class: 'info-button' %></span>
            <%= f.text_field :whiskey, min: 0, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :shochu, "焼酎の飲酒量(cc)" %>
            <span aria-label="ストレート/ロック/ソーダ割1杯あたり約90ccの焼酎が含まれます。" data-microtip-position="top" role="tooltip"><%= image_tag 'info.png', class: 'info-button' %></span>
            <%= f.text_field :shochu, min: 0, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :drunk, "酔いの程度" %>
            <%= f.select :drunk, [["ほろ酔い", "ほろ酔い"], ["酔っ払った", "酔っ払った"], ["ふらふらする/呂律が回らない", "ふらふらする/呂律が回らない"], ["泥酔", "泥酔"]], {}, class: "form-control" %>
          </div>

          <div class="calender__button button" >
            <%= f.submit "更新", class: "calender__button-item button__item", style: "margin:0 auto;" %>
          </div>
        <% end %>
      </div>
      <hr class="form-divider">
      <div class="form-delete">
        <%= form_with(model: @record, url: destroy_record_records_path, method: :delete, local: true, data: { confirm: '本当に削除しますか？' }) do |f| %>
          <%= f.submit "削除", class: "calender__button-item button__item", style: "margin:0 auto;" %>
          <div class="form-group">
            <%= f.hidden_field :drink_day, value: params[:drink_day] %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div> 