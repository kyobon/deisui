<div class="input-password">
  <ul class="input-password__caption caption">
    <li><h3>パスワードを再設定する</h3></li>
  </ul>
</div>

<div class="bootstrap reset-password__form">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_with(model: @user, url: password_reset_path(params[:id])) do |f| %>
        <%= render 'shared/error_messages' %>

        <%= hidden_field_tag :email, @user.email %>

        <div class="form-group">
            <%= f.label :password, "パスワード" %>
            <%= f.password_field :password, class: 'form-control', placeholder: "8文字以上" %>
        </div>

        <div class="form-group">
            <%= f.label :password_confirmation, "パスワード(再入力)" %>
            <%= f.password_field :password_confirmation, class: 'form-control' %>
        </div>

        <div class="input-password__button button" >
          <%= f.submit "再設定", class: "input-password__button-item button__item", style: "margin:0 auto;" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
