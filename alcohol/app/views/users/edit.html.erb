<div class="user-edit">
  <ul class="user-edit__caption caption">
    <li><h3>プロフィール設定</h3></li>
  </ul>
  <div class="bootstrap signup-page__form">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_with(model: @user) do |f| %>
        <%= render 'shared/error_messages' %>

        <div class="form-group">
          <%= f.label :name, "ユーザ名" %>
          <%= f.text_field :name, class: "form-control", placeholder: "山田 錦" %>
        </div>

        <div class="form-group">
          <%= f.label :email, "メールアドレス" %>
          <%= f.email_field :email, class: "form-control", placeholder: "example@gmail.com" %>
        </div>

        <div class="form-group">
          <%= f.label :password, "パスワード" %>
          <%= f.password_field :password,  class: "form-control", placeholder: "8文字以上 ※変更しない場合は空欄で可" %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, "パスワード(再入力)" %>
          <%= f.password_field :password_confirmation, class: "form-control", placeholder: "8文字以上 ※変更しない場合は空欄で可" %>
        </div>
        
        <div class="signup-page__button button" >
          <%= f.submit "更新", class: "signup-page__button-item button__item", style: "margin:0 auto;" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
</div>