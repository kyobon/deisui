<div class="users-title">
  <ul class="users-title__caption caption">
    <li><h3>ユーザ一覧</h3></li>
  </ul>
</div>

<div class="bootstrap">
  <div class="users-pages">
    <%= will_paginate %>
  </div>

  <div class="users-list">
    <ul class="users-element">
      <% @users.each do |user| %>
        <li>
          <%= link_to user.name, user %>
          <% if current_user.admin? && !current_user?(user) %>
            | <%= link_to "削除", user, data: { "turbo-method": :delete, turbo_confirm: "You sure?" } %>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
  
  <div class="users-pages">
    <%= will_paginate %>
  </div>
</div>